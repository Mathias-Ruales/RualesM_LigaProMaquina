@{
    ViewData["Title"] = "Home Page";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
	<!--Codigo de chat-->
    <style>
		.carousel-item img {
			width: 720px;
			height: 500px;
		}
    </style>
    <!-- fin del codigo de chat-->
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">LigaPro MVC</h1>
        <div id="carouselExampleCaptions" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.nacionfutbol.com.ec/image/nacionfutbolcomec/hinchada-ldu-foto-ecuavisa-1744663093-hq.webp" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>M de Modelo</h5>
                        <p>Modelo es como el constructor.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://www.elfutbolero.com.ec/image/elfutbolerocomec/el-cuadro-torero-tiene-afectos-lado-y-que-aprovechan-cualquier-oportunidad-demostrar-su-simpatia-el-club-1702055318-hq.webp" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>V de Vista</h5>
                        <p>Vista se refiere a como se visualiza.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://www.havolinedeportivo.com/wp-content/uploads/2025/03/El-Nacional-2025.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>C de Controlador</h5>
                        <p>Los controladores contienen casi toda la logica.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
</body>
</html>


